{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MNIST Experiment 1",
            "command": "${command:python.interpreterPath}",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "./src/main.py",
                "--dataset", "cifarfs",
                "--datadir", "'./data'",
                "--epochs", "15",
                "--batch","100",
                "--dims","15", "400",
                "--lr","0.00004", "0.004",
                "--channels","32", "32", "64", "128", "256",
                "--layers","5",
                "-t",
                "-fs", 
                "-pt",
                "--shots", "5",
                "--model", "resnet101",
                "--gpu", "0.5",
                "--cpu", "6",
                "--exp-name", "cifarfs_resnet101_1",
                "--samples", "200"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        }
    ]
}